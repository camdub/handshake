{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "description": "A basic User object",
  "type": "object",
  "properties": {
    "first_name" : {
      "type" : "string"
    },
    "last_name" : {
      "type" : "string"
    },
    "email" : {
      "type" : "string"
    },
    "phone_number" : {
      "type" : "string"
    },
    "handshake_access_token" : {
      "type" : "string",
      "pattern": "^.+" // non-empty string
    }
  },
  "required" : ["first_name","last_name","email","handshake_access_token"]
}
